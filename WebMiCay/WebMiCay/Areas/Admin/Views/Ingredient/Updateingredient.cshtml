@model WebMiCay.Areas.Admin.Models.IngredientViewModel
@{
    ViewBag.Title = "Updateingredient";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html dir="ltr" lang="en">
<head>
    <link rel="canonical"
          href="https://www.wrappixel.com/templates/ample-admin-lite/" />
    <link href="~/Areas/Admin/Assets/Client/css/style.min.css" rel="stylesheet" />

</head>
<body>
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <div id="main-wrapper"
         data-layout="vertical"
         data-navbarbg="skin5"
         data-sidebartype="full"
         data-sidebar-position="absolute"
         data-header-position="absolute"
         data-boxed-layout="full">
        <div class="page-wrapper">
            <div class="container-fluid">
                <!-- Row -->
                <div class="row">
                    <!-- Column -->
                    <!-- Column -->
                    <!-- Column -->
                    <div class="col-lg-8 col-xlg-9 col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <form class="form-horizontal form-material" method="post" onsubmit="return validateForm()">
                                    <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Tên nguyên liệu</label>
                                        <div class="col-md-12 border-bottom p-0">
                                            <input type="text"
                                                   placeholder="Nhập tên nguyên liệu..."
                                                   class="form-control p-0 border-0"
                                                   name="tenNL" />
                                        </div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Giá nguyên liệu</label>
                                        <div class="col-md-12 border-bottom p-0">
                                            <input type="text"
                                                   placeholder="Nhập giá nguyên liệu..."
                                                   class="form-control p-0 border-0"
                                                   name="giaNL" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group mb-4 col-xl-6">
                                            <label class="col-sm-12">Đơn vị</label>
                                            <div class="col-sm-12 border-bottom">
                                                <select class="form-select shadow-none p-0 border-0 form-control-line" name="donVi">
                                                    <option>Lựa chọn đơn vị</option>
                                                    <option>Gói</option>
                                                    <option>Kg</option>
                                                    <option>Cái</option>
                                                </select>
                                                <div class="alert alert-danger hidden" style="display: none;">
                                                    Phải chọn đơn vị!
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <div class="col-sm-12">
                                            <button class="btn btn-success">Cập nhật thông tin</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Areas/Admin/Assets/Client/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/Assets/Client/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/Admin/Assets/Client/js/app-style-switcher.js"></script>
    <script src="~/Areas/Admin/Assets/Client/js/waves.js"></script>
    <script src="~/Areas/Admin/Assets/Client/js/custom.js"></script>
    <script src="~/Areas/Admin/Assets/Client/js/sidebarmenu.js"></script>
    <script>
        (function ($) {
            "use strict";
            $(function () {
                $(".file-upload-browse").on("click", function () {
                    var file = $(this)
                        .parent()
                        .parent()
                        .parent()
                        .find(".file-upload-default");
                    file.trigger("click");
                });
                $(".file-upload-default").on("change", function () {
                    $(this)
                        .parent()
                        .find(".form-control")
                        .val(
                            $(this)
                                .val()
                                .replace(/C:\\fakepath\\/i, "")
                        );
                });
            });
        })(jQuery);
    </script>

    <!-->Xử lý tính hợp lệ khi cập nhật thông tin</!-->
    <script>
        function validateForm() {
            // Lấy giá trị từ các trường nhập
            var donVi = document.getElementsByName("donVi")[0].value;

            // Khai báo biến kiểm tra lỗi
            var hasError = false;

            // Kiểm tra Đơn vị phải được chọn nếu có giá trị
            if (donVi.trim() !== "" && donVi === "Lựa chọn đơn vị") {
                showError("Phải chọn đơn vị!", "donVi");
                hasError = true;
            } else {
                hideError("donVi");
            }

            // Nếu có lỗi, ngăn chặn form gửi đi
            return !hasError;
        }

        // Hiển thị thông báo lỗi
        function showError(errorMessage, inputName) {
            // Ẩn tất cả các thông báo lỗi trước khi hiển thị mới
            document.querySelectorAll('.alert-danger').forEach(function (element) {
                element.style.display = 'none';
            });

            var errorElement = document.querySelector(`[name=${inputName}] + .alert-danger`);
            errorElement.textContent = errorMessage;
            errorElement.style.display = "block";
        }

        // Ẩn thông báo lỗi
        function hideError(inputName) {
            var errorElement = document.querySelector(`[name=${inputName}] + .alert-danger`);
            errorElement.style.display = "none";
        }
    </script>
</body>
</html>